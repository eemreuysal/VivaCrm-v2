{
  "name": "vivacrm-v2",
  "version": "1.0.0",
  "description": "VivaCRM v2 Frontend",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:css",
    "preview": "vite preview",
    "build:css": "postcss ./static/css/src/main.css -o ./static/css/dist/main.css",
    "watch:css": "postcss ./static/css/src/main.css -o ./static/css/dist/main.css --watch",
    "build:css:prod": "NODE_ENV=production postcss ./static/css/src/main.css -o ./static/css/dist/main.min.css",
    "analyze": "vite-bundle-visualizer",
    "format": "prettier --write \"static/{js,css}/**/*.{js,css}\"",
    "lint": "eslint static/js/**/*.js",
    "lint:fix": "eslint static/js/**/*.js --fix",
    "lint:css": "stylelint \"static/css/**/*.css\"",
    "lint:css:fix": "stylelint \"static/css/**/*.css\" --fix",
    "type-check": "tsc --noEmit"
  },
  "author": "VivaCRM Team",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-legacy": "^5.2.0",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "daisyui": "^4.7.2",
    "eslint": "^8.56.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-custom-properties": "^13.3.4",
    "postcss-import": "^16.0.0",
    "postcss-nesting": "^12.0.2",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-bundle-visualizer": "^0.11.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.5",
    "apexcharts": "^3.46.0",
    "htmx.org": "^1.9.10",
    "svg2img": "^1.0.0-beta.2"
  }
}
