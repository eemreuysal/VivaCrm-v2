{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": "./static",
        "paths": {
            "@/*": ["js/*"],
            "@components/*": ["js/components/*"],
            "@modules/*": ["js/modules/*"],
            "@store/*": ["js/store/*"],
            "@core/*": ["js/core/*"]
        },
        "types": ["node"]
    },
    "include": [
        "static/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "static/js/vendor/**/*",
        "static/js/dist/**/*",
        "staticfiles/**/*"
    ]
}